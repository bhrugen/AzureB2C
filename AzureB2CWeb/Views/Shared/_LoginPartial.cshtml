@using System.Security.Principal


@if (User.Identity?.IsAuthenticated == true)
{
    <span class="text-muted">Hello, @User.Identity.Name</span>
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">
            <a class="nav-link text-dark" asp-area=""
               asp-controller="Home" asp-action="EditProfile">Edit Profile</a>
        </li>
        <li class="navbar-text">
            <a class="nav-link text-dark" asp-area=""
               asp-controller="Home" asp-action="SignOut">Sign out</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">
            <a class="nav-link text-dark" asp-area=""
               asp-controller="Home" asp-action="SignIn">Sign in</a>
        </li>
    </ul>
}
